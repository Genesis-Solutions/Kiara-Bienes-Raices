<form id="cuerpoInmueble" name="cuerpoInmueble" action="/dashboard/alta/inmueble/cuerpoBodega/<%=idInmueble%>" method="POST">
    
    <!-- Información General -->

    <div class="px-10 pb-12 grid grid-cols-2 space-x-8">
        <div class="space-y-2">
            <label for="titulo" class="text-lg font-semibold">Título</label>
            <input
                class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                type="text" id="titulo" name="titulo" placeholder="Casa en Álamos" maxlength="150" required/>
        </div>
        <div class="space-y-2">
            <label for="linkVideo" class="text-lg font-semibold">Enlace al Vídeo de Youtube</label>
            <input
                class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                type="text" id="linkVideo" name="linkVideo" placeholder="www.youtube.com" required/>
        </div>
    </div>

    <!-- Detalles -->
    
    <div class="p-10 bg-sky-950 grid grid-cols-3 gap-8">
        <div class="space-y-4">
            <label for="tipoOperacion" class="text-lg font-semibold text-white">Tipo de Operación</label>
            <div class="flex flex-row">
                <fieldset>
                    <input id="draft" class="peer/venta w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded" type="checkbox" name="venta" class="form-checkbox"/>
                    <label for="draft" class="ml-1 text-base text-white">Venta</label>
                    <input id="published" class="ml-8 peer/renta w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded" type="checkbox" name="renta" class="form-checkbox" />
                    <label for="published" class="ml-1 text-base text-white">Renta</label>
                    <div class="mt-4 hidden peer-checked/venta:block space-y-2">
                        <h3 for="" class="text-lg font-semibold text-white">Precio Venta</h3>
                        <input
                            class="h-10 px-5 bg-white w-auto rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                            type="number" id="precioVenta" name="precioVenta" placeholder="3,000,000" maxlength="30"/>
                    </div>
                    <div class="mt-4 hidden peer-checked/renta:block space-y-2">
                        <h3 for="" class="text-lg font-semibold text-white">Precio Renta (por mes)</h3>
                        <input
                            class="h-10 px-5 bg-white w-auto rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                            type="number" id="precioRenta" name="precioRenta" placeholder="15,000" maxlength="30"/>
                    </div>
                </fieldset>
            </div>
            <% if (idRol === 2) { %>
                <input type="hidden" id="id_agente" name="id_agente" value="<%=idusuario%>">
            <% } else if (idRol === 1) { %>
                <div class="space-y-2">
                    <label for="id_agente" class="text-lg font-semibold text-white">Agentes y administradores disponibles</label>
                    <select class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800 block"
                        id="id_agente" name="id_agente">
                        <% listaAgentes.forEach(agente=>{ %>
                            <option value="<%=agente.idUsuario%>"><%=agente.nombreUsuario%> <%=agente.apellidosUsuario%></option>
                        <% }); %>
                    </select>
                </div>
            <% } %>
        </div>
        <div class="col-span-2 space-y-2">
            <label for="" class="text-lg font-semibold text-white">Amenidades Secundarias</label>
            <div class="grid grid-cols-3 gap-7">

                <!-- Columna de Inputs -->

                <div class="grid grid-cols-2 gap-2 text-sm">
                    <div class="text-white flex items-center space-x-2">
                        <i class="fa-solid fa-expand"></i><p> M2 de Terreno</p>
                    </div>
                    <div class="flex items-center">
                        <input
                            class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                            type="number" id="m2terreno" name="m2terreno" placeholder="450" maxlength="30" required/>
                    </div>
                    <div class="text-white flex items-center space-x-2">
                        <i class="fa-solid fa-ruler-combined"></i><p>Medidas Frente</p>
                    </div>
                    <div class="flex items-center">
                        <input
                            class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                            type="number" id="medidaFrente" name="medidaFrente" placeholder="1" maxlength="30" required/>
                    </div>
                    <div class="text-white flex items-center space-x-2">
                        <i class="fa-solid fa-ruler-combined"></i><p>Medidas Fondo</p>
                    </div>
                    <div class="flex items-center">
                        <input
                            class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                            type="number" id="medidaFondo" name="medidaFondo" placeholder="1" maxlength="30" required/>
                    </div>
                    <div class="text-white flex items-center space-x-2">
                        <i class="fa-solid fa-door-closed"></i><p> Privados</p>
                    </div>
                    <div class="flex items-center">
                        <input
                            class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                            type="number" id="cuartosPrivadosInmueble" name="cuartosPrivadosInmueble" placeholder="1" maxlength="3" required/>
                    </div>
                    <div class="text-white flex items-center space-x-2">
                        <i class="fa-solid fa-toilet"></i><p> 1/2 baño(s)</p>
                    </div>
                    <div class="flex items-center">
                        <input
                            class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                            type="number" id="mediosBanios" name="mediosBanios" placeholder="2" maxlength="30" required/>
                    </div>
                    <div class="text-white flex items-center space-x-2">
                        <i class="fa-solid fa-circle-dollar-to-slot"></i><p> C. de Manten.</p>
                    </div>
                    <div class="flex items-center">
                        <input
                            class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                            type="number" id="cuotaMantenimiento" name="cuotaMantenimiento" placeholder="1" maxlength="30" required/>
                    </div>
                    <div class="text-white flex items-center space-x-2">
                        <i class="fa-regular fa-calendar-days"></i><p> Año de Const.</p>
                    </div>
                    <div class="flex items-center">
                        <input
                            class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                            type="int" id="fechaConstruccion" name="fechaConstruccion" placeholder="2008" maxlength="4" 
                            required oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"/>
                    </div>
                    <div class="text-white flex items-center space-x-2">
                        <i class="fa-solid fa-ruler-vertical"></i><p> Altura (mts.)</p>
                    </div>
                    <div class="flex items-center">
                        <input
                            class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                            type="number" id="altura" name="altura" placeholder="20" maxlength="30" required/>
                    </div>
                    <div class="text-white flex items-center space-x-2">
                        <i class="fa-solid fa-trowel-bricks"></i><p> Muros</p>
                    </div>
                    <div class="flex items-center">
                        <input
                            class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                            type="number" id="muros" name="muros" placeholder="1" maxlength="30" required/>
                    </div>
                </div>

                <!-- Columna de Dropdowns -->

                <div class="space-y-2">
                    <div class="space-y-2">
                        <label for="usoSuelo" class="text-sm text-white">Uso de Suelo</label>
                        <select class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800 block"
                            id="usoSuelo" name="usoSuelo">
                            <option value="Habitacional">Habitacional</option>
                            <option value="Comercial">Comercial</option>
                            <option value="Comercial y Servicios">Comercial y Servicios</option>
                            <option value="Industrial">Industrial</option>
                            <option value="Ejidal">Ejidal</option>
                            <option value="Otros">Otros</option>
                        </select>
                    </div>
                    <div class="space-y-2">
                        <label for="ubicado" class="text-sm text-white">Ubicado</label>
                        <select class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800 block"
                            id="ubicado" name="ubicado">
                            <option value="0">Sobre calle</option>
                            <option value="1">En privada</option>
                        </select>
                    </div>
                    <div class="space-y-2">
                        <label for="tipoPiso" class="text-sm text-white">Tipo de Piso</label>
                        <select class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800 block"
                            id="tipoPiso" name="tipoPiso">
                            <option value="Industrial">Industrial</option>
                            <option value="Uso ligero">Uso Ligero</option>
                            <option value="Uso pesado">Uso Pesado</option>
                        </select>
                    </div>
                    <div class="space-y-2">
                        <label for="tipoLuz" class="text-sm text-white">Tipo de Luz</label>
                        <select class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800 block"
                            id="tipoLuz" name="tipoLuz">
                            <option value="Trifacica">Trifácica</option>
                            <option value="Bifacica">Bifácica</option>
                        </select>
                    </div>
                </div>

                <!-- Columna de Checkbox -->

                <div class="space-y-2 text-sm text-white">
                    <div>
                        <input type="checkbox" id="cocina" name="cocina" value="0" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded">
                        <label for="default-checkbox" class="ml-1 text-base">Cocina</label>
                    </div>
                    <div>
                        <input type="checkbox" id="cisterna" name="cisterna" value="0" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded">
                        <label for="default-checkbox" class="ml-1 text-base">Cisterna</label>
                    </div>
                    <div>
                        <input type="checkbox" id="vigilancia" name="vigilancia" value="0" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded">
                        <label for="default-checkbox" class="ml-1 text-base">Vigilancia</label>
                    </div>
                    <div>
                        <input type="checkbox" id="generadorElectrico" name="generadorElectrico" value="0" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded">
                        <label for="default-checkbox" class="ml-1 text-base">Generador Eléctrico</label>
                    </div>
                    <div>
                        <input type="checkbox" id="andenCarga" name="andenCarga" value="0" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded">
                        <label for="default-checkbox" class="ml-1 text-base">Andén de Carga</label>
                    </div>
                    <div>
                        <input type="checkbox" id="oficina" name="oficina" value="0" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded">
                        <label for="default-checkbox" class="ml-1 text-base">Oficina Inmueble</label>
                    </div>
                    <div>
                        <input type="checkbox" id="patioManiobras" name="patioManiobras" value="0" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded">
                        <label for="default-checkbox" class="ml-1 text-base">Patio de Maniobras</label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Amenidades Principales -->

        <div class="space-y-2">
            <label for="" class="text-lg font-semibold text-white">Amenidades Principales</label>
            <div class="grid grid-cols-2 gap-4">
                <div class="text-white flex items-center space-x-2">
                    <i class="fa-solid fa-house"></i><p> M2 de Construcción</p>
                </div>
                <div>
                    <input
                        class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                        type="number" id="m2construccion" name="m2construccion" placeholder="450" maxlength="30" required/>
                </div>
                <div class="text-white flex items-center space-x-2">
                    <i class="fa-solid fa-layer-group"></i><p> Pisos</p>
                </div>
                <div>
                    <input
                        class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                        type="number" id="niveles" name="niveles" placeholder="3" maxlength="30" required/>
                </div>
                <div class="text-white flex items-center space-x-2">
                    <i class="fa-solid fa-car"></i><p> Estacionamiento</p>
                </div>
                <div>
                    <input
                        class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                        type="number" id="estacionamientos" name="estacionamientos" placeholder="1" maxlength="30" required/>
                </div>
                <div class="text-white flex items-center space-x-2">
                    <i class="fa-solid fa-bath"></i><p> Baños</p>
                </div>
                <div>
                    <input
                        class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                        type="number" id="banios" name="banios" placeholder="2" maxlength="30" required/>
                </div>
            </div>
            
        </div>

        <!-- Descripción Inmueble -->
        <div class="col-span-2 space-y-2">
            <label for="" class="text-lg font-semibold text-white">Sobre esta Propiedad</label>
            <textarea id="desc" name="desc" maxlength="950" rows="5" class="block px-5 py-3 w-full text-sm bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="Esta propiedad..."></textarea>
            <br>
            <label for="id_arrendador" class="text-lg font-semibold text-white">Dueño del inmueble</label>
            <select class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800 block"
                id="id_arrendador" name="id_arrendador">
                <% listaClientes.forEach(cliente=>{ %>
                    <option value="<%=cliente.idUsuario%>"><%=cliente.nombreUsuario%> <%=cliente.apellidosUsuario%></option>
                <% }); %>
            </select>
        </div>
    </div>

    <!-- Dirección Inmueble -->
    <div class="p-10 flex justify-center">
        <div class="grid grid-cols-2 space-x-5 gap-8">
            <div class="space-y-5">
                <div class="space-y-2">
                    <label for="direccion" class="text-lg font-semibold">Dirección de la Propiedad</label>
                    <input
                        class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                        type="text" id="direccion" name="direccion" placeholder="Condesa de Barry 305" maxlength="200" required/>
                </div>
            </div>
            <div class="space-y-2">
                <label for="direccion" class="text-lg font-semibold">Link de “Embed a Map” en Google Maps</label>
                <input
                    class="h-10 px-5 bg-white w-full rounded-lg border border-gray-300 text-sm focus:outline-none focus:border-gray-800 focus:ring-gray-800"
                    type="text" id="linkMaps" name="linkMaps" placeholder="iframe src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12617.262388400684!2d-100.4082022221727!3d20.611509759670554!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d35ae83751a45d%3A0x4fa6ee69f6b64f3a!2sTecnol%C3%B3gico%20de%20Monterrey!5e0!3m2!1ses-419!2smx!4v1682632411233!5m2!1ses-419!2smx'" maxlength="600" required/>
            </div>
        </div>
    </div>
    <div class="px-10 pb-12 flex justify-evenly">
        <input type="hidden" id="id_inmueble" name="id_inmueble" value="<%=idInmueble%>">
        <button class="px-5 py-2 w-1/3 rounded-lg text-base text-white font-medium bg-red-600 hover:font-medium hover:bg-red-700 btnCancelar">
            Cancelar
        </button>
        <input type="submit" class="px-5 py-2 w-1/3 rounded-lg text-base text-white font-medium bg-gray-800 hover:font-medium hover:bg-gray-700" value=" Registrar " />
    </div>
</form>