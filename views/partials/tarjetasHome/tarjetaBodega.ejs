<div class="w-full">
    <a href="inmueble/<%=data.idInmueble%>">
        <div class="rounded-lg border border-gray-300 hover:scale-105 transition duration-150">
            <img src="/get_bucket_img?image=<%=data.img%>" class="w-full h-44 rounded-t-lg">
            <div class="px-5 py-3">
                <h3 class="text-lg font-semibold"> <%= data.nombreInmueble %>
                </h3>
                <div class="grid grid-cols-2 gap-2 py-2">
                    <div>
                        <i class="fa-solid fa-house"></i> <%= data.m2TerrenoInmueble %> m2
                    </div>
                    <div>
                        <i class="fa-solid fa-layer-group"></i> <%= data.nivelesInmueble %> niveles
                    </div>
                    <div>
                        <i class="fa-solid fa-bath"></i> <%= data.baniosInmueble %> baÃ±os
                    </div>
                    <div>
                        <i class="fa-solid fa-car"></i> <%= data.estacionamientosInmueble %> estac.
                    </div>
                </div>
                <% const formatter = new Intl.NumberFormat('es-MX', {maximumFractionDigits: 0, style: 'currency',currency: 'MXN'}); %>
                <% if (data.idTipoMovimiento == 1) { %>
                    <h3 class="text-lg font-medium"> Venta: <%= formatter.format(data.precioVentaInmueble) %> MXN</h3> 
                <% } %>
                <% else if (data.idTipoMovimiento == 2) {%>
                    <h3 class="text-lg font-medium"> Renta: <%= formatter.format(data.precioRentaInmueble) %> MXN / Mes</h3>
                <% } %>
                <% else if (data.idTipoMovimiento == 3) {%>
                    <h3 class="text-lg font-medium"> Venta: <%= formatter.format(data.precioVentaInmueble) %> MXN</h3> 
                    <h3 class="text-lg font-medium"> Renta: <%= formatter.format(data.precioRentaInmueble) %> MXN / Mes</h3>
                <% } %>
            </div>
        </div>
    </a>
</div>