<!-- Tarjeta de Bodega -->

<div class="p-12">
    <div class="rounded-lg border border-gray-300 hover:scale-105 transition duration-150">
        <div class="flex flex-col md:grid md:grid-cols-3">
            <div class="md:order-last">
                <!-- <img src="/catalogo/get_bucket_img/<%=data.img%>" class="w-full h-full rounded-t-lg md:rounded-tl-none md:rounded-r-lg" alt="<%=data.img%>"> -->
                <img src="/catalogo/get_bucket_img?image=<%=data.img%>" class="w-full h-full rounded-t-lg md:rounded-tl-none md:rounded-r-lg" alt="<%=data.img%>">
            </div>
            <div class="col-span-2 p-5 md:p-6 lg:p-12 space-y-5">
                <div class="flex justify-between lg:flex-row flex-col">
                    <h1 class="text-lg font-semibold flex-grow">
                        <%= data.nombreInmueble %>
                    </h1>
                    <p class="text-lg font-semibold">
                        <% const formatter = new Intl.NumberFormat('es-MX', {maximumFractionDigits: 0, style: 'currency',currency: 'MXN'}); %>
                        <% if(data.precioVentaInmueble != null){ %>
                            Venta: <%= formatter.format(data.precioVentaInmueble) %> -  
                        <% } %> 
                        <%if(data.precioRentaInmueble != null){%>
                            Renta: <%= formatter.format(data.precioRentaInmueble) %>
                        <% } %>
                    </p>
                </div>
                <div>
                    <!-- m2Terreno, altura, tipoPiso, oficina -->
                    <div class="flex flex-row space-x-8 text-sm lg:text-base">
                        <div class="flex flex-row space-x-2 text-sm lg:text-base" title="M2 de Terreno">
                            <i class="fa-solid fa-ruler"></i> <p><%= data.m2CTerrenoInmueble%> m2.</p>
                        </div>
                        <div class="flex flex-row space-x-2 text-sm lg:text-base" title="Altura">
                            <i class="fa-solid fa-arrow-up"></i><p><%= data.alturaInmueble%> m.</p>
                        </div>
                        <div class="flex flex-row space-x-2 text-sm lg:text-base" title="Tipo de Piso">
                            <i class="fa-solid fa-boxes-stacked"></i><p> <%= data.tipoPisoInmueble%></p>
                        </div>
                        <div class="flex flex-row space-x-2 text-sm lg:text-base" title="Número de Oficinas">
                            <i class="fa-solid fa-briefcase"></i><p> <%= data.oficinaInmueble%> oficinas</p>
                        </div>
                    </div>
                </div>
                <div class="space-y-2">
                    <h3 class="font-semibold">
                        <%= data.direccionInmueble %>
                    </h3>
                    <p class="hidden md:flex">
                        <%= data.descInmueble %>                    
                    </p>
                </div>
                <div class="flex justify-end">
                    <button class="px-5 py-2 w-1/3 rounded-lg text-base text-white font-medium bg-gray-800 hover:font-medium hover:bg-gray-700">
                        Ver Más
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>