<!-- Tarjeta de Casa y Departamento -->

<div class="py-4">
    <div class="rounded-lg border border-gray-300 hover:scale-105 transition duration-150">
        <div class="flex flex-col md:grid md:grid-cols-3">
            <div class="md:order-last">
                <!-- <img src="/catalogo/get_bucket_img/<%=data.img%>" class="w-full h-full rounded-t-lg md:rounded-tl-none md:rounded-r-lg" alt="<%=data.img%>"> -->
                <img src="/catalogo/get_bucket_img?image=<%=data.img%>" class="h-60 md:h-96 w-full rounded-t-lg md:rounded-tl-none md:rounded-r-lg" alt="<%=data.img%>">
            </div>
            <div class="col-span-2 p-5 md:p-6 lg:p-12 space-y-5">
                <div class="flex justify-between lg:flex-row flex-col">
                    <h1 class="text-lg font-semibold flex-grow">
                        <%= data.nombreInmueble %>
                    </h1>
                    <p class="text-lg font-semibold">
                        <% const formatter = new Intl.NumberFormat('es-MX', {maximumFractionDigits: 0, style: 'currency',currency: 'MXN'}); %>
                        <% if(data.precioVentaInmueble != null){ %>
                            Venta: <%= formatter.format(data.precioVentaInmueble) %> -  
                        <% } %> 
                        <%if(data.precioRentaInmueble != null){%>
                            Renta: <%= formatter.format(data.precioRentaInmueble) %>
                        <% } %>
                    </p>
                </div>
                <div>
                    <!-- m2Terreno, m2Construidos, usoSuelo, enPrivada -->
                    <div class="flex flex-row space-x-8 text-sm lg:text-base">
                        
                        <div class="flex flex-row space-x-2 text-sm lg:text-base" title="m2 de Terreno">
                            <i class="fa-solid fa-ruler"></i><p><%= data.m2TerrenoInmueble%> m2</p>
                        </div>
                        <div class="flex flex-row space-x-2 text-sm lg:text-base" title="m2 Construidos">
                            <i class="fa-solid fa-house"></i> <p><%= data.m2ConstruidosInmueble%> m2</p>
                        </div>
                        <div class="flex flex-row space-x-2 text-sm lg:text-base" title="Uso de Suelo"">
                            <i class="fa-solid fa-person-arrow-down-to-line"></i><p><%= data.usoSueloInmueble%></p>
                        </div>
                        <div class="flex flex-row space-x-2 text-sm lg:text-base" title="En Privada?">
                            <% if (data.enPrivadaInmueble == 1){ %>
                                <i class="fa-solid fa-person-military-pointing"></i><p>Sí</p>
                            <% } else {%>
                                <i class="fa-solid fa-person-military-pointing"></i><p>No</p>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="space-y-2">
                    <h3 class="font-semibold">
                        <%= data.direccionInmueble %>
                    </h3>
                    <p class="hidden md:flex">
                        <%= data.descInmueble %>                    
                    </p>
                </div>
                <div class="flex justify-end">
                    <a href="/inmueble/<%=data.idInmueble%>" class="px-5 py-2 w-1/3 rounded-lg text-center text-base text-white font-medium bg-gray-800 hover:font-medium hover:bg-gray-700">
                        Ver Más
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>